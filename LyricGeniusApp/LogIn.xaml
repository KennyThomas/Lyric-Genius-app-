<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LyricGeniusApp.LogIn">
    <ContentPage.Content>
        <StackLayout     BackgroundColor="DarkGray" >

            <Label 
              
                Text="Log In!"
               Grid.Column="0"
               Grid.ColumnSpan="3"
               Grid.Row="0"
               FontSize="30"
               FontAttributes="Bold"
               VerticalOptions="StartAndExpand"
               HorizontalOptions="Center" ></Label>
            <Entry x:Name="entUser" Placeholder="Username"
               Margin="10, 10, 10, 5" />
            <Entry x:Name="entPassword" Placeholder="Password"
               IsPassword="True" Margin="10, 5, 10, 5"/>


            <Button x:Name="btnLogin" Text="Log in " 
                Margin="10, 5, 10, 10"
                Clicked="Login_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>