                <Label Text=" (Q3) When the night has come and the land is ____" FontSize="Medium" HorizontalOptions="Center" ></Label>
                <Entry x:Name="Answer3" Placeholder="Blank"
             FontSize="Medium"
               HorizontalOptions="CenterAndExpand"/>
