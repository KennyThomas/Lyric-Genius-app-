<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LyricGeniusApp.DifficultySelect">
    <ContentPage.Content>
       
            <StackLayout BackgroundColor="DarkGray">
                <Label Text="Choose Difficulty"
                FontSize="Large"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
                <Button x:Name="EasyMode" FontSize="Large" Text="Easy"  Clicked="Easy_Clicked"></Button>
                <Button x:Name="MediumMode" FontSize="Large" Text="Medium"  Clicked="Medium_Clicked" ></Button>
                <Button x:Name="HardMode" FontSize="Large" Text="Hard"  Clicked="Hard_Clicked"></Button>
            </StackLayout>
     
    </ContentPage.Content>
</ContentPage>